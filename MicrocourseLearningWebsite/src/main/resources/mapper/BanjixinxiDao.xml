<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.BanjixinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.BanjixinxiEntity" id="banjixinxiMap">
        <result property="jiaoshizhanghao" column="jiaoshizhanghao"/>
        <result property="jiaoshixingming" column="jiaoshixingming"/>
        <result property="banjihao" column="banjihao"/>
        <result property="banjimingcheng" column="banjimingcheng"/>
        <result property="banjirenshu" column="banjirenshu"/>
        <result property="banjijieshao" column="banjijieshao"/>
        <result property="banjitupian" column="banjitupian"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.BanjixinxiVO" >
		SELECT * FROM banjixinxi  banjixinxi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.BanjixinxiVO" >
		SELECT  banjixinxi.* FROM banjixinxi  banjixinxi 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.BanjixinxiView" >

		SELECT  banjixinxi.* FROM banjixinxi  banjixinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.BanjixinxiView" >
		SELECT * FROM banjixinxi  banjixinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM banjixinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM banjixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM banjixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM banjixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM banjixinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>




</mapper>
